<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--RED CONNECTOR FORM VIEW INHERIT -->
    <record id="red_connector_instance_form_view" model="ir.ui.view">
        <field name="name">RED CONNECTOR FORM INHERIT</field>
        <field name="model">red.connector.instance</field>
        <field name="inherit_id" ref="red_common_connector.red_connector_instance_form_view"/>
        <field name="arch" type="xml">
            <field name="provider_id" position="after">
                <field name="everlast_path" required="provider_id == 'everlast'" invisible="provider_id != 'everlast'"/>
            </field>
            <group name="images" position="inside">
                <field name="everlast_image_path" invisible="provider_id != 'everlast'"/>
            </group>
        </field>
    </record>
</odoo>