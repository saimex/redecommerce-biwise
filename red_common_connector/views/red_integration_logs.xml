<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- RED INTEGRATION LOGS FORM VIEW-->
    <record id="red_integration_logs_form_view" model="ir.ui.view">
        <field name="name">RED INTEGRATION LOGS FORM VIEW</field>
        <field name="model">red.integration.logs</field>
        <field name="arch" type="xml">
            <form string="Red Integration Logs">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="ttype_process" readonly="1"/>
                            <field name="total_processed" readonly="1"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="provider_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="messsage" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--RED INTEGRATION LOGS TREE VIEW-->
    <record id="red_integration_logs_tree_view" model="ir.ui.view">
        <field name="name">RED INTEGRATION LOGS TREE VIEW</field>
        <field name="model">red.integration.logs</field>
        <field name="arch" type="xml">
            <tree string="RED INTEGRATION LOGS">
                <field name="create_date"/>
                <field name="name"/>
                <field name="provider_id"/>
                <field name="ttype_process"/>
                <field name="total_processed"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--RED INTEGRATION LOGS ACTION VIEW-->
    <record id="red_integration_logs_act_window" model="ir.actions.act_window">
        <field name="name">RED INTEGRATION LOGS ACTION</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">red.integration.logs</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--MENUITEM ACTION VIEW-->
    <menuitem name="Logs"
              id="menuitem_logs"
              parent="menuroot_red_connector_instance"
              action="red_integration_logs_act_window"
              sequence="2"/>
</odoo>