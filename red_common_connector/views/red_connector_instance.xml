<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--RED CONNECTOR INSTANCE FORM VIEW-->
    <record id="red_connector_instance_form_view" model="ir.ui.view">
        <field name="name">RED CONNECTOR INSTANCE FORM</field>
        <field name="model">red.connector.instance</field>
        <field name="arch" type="xml">
            <form string="ModelTitle">
                <header>
                    <button type="object" name="run_process" string="Run Process" class="btn"/>
                    <button type="object" name="run_update_process" string="Run Update Process" class="btn"/>
                    <button type="object" name="run_update_images" string="Run Update Image" class="btn"/>
                    <button type="object" name="test_process" string="Test Product" class="btn"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group name="data_connection" string="Data Connection">
                        <group name="first_side">
                            <field name="provider_id"/>
                        </group>
                        <group name="complement_site">
                            <field name="unpublish_product_present"/>
                        </group>
                    </group>
                    <group>
                         <group name="price" string="Calculation Price">
                            <field name="currency_rate"/>
                            <field name="imp_product"/>
                            <field name="imp_utility"/>
                        </group>
                        <group name="images" string="Images">
                            <field name="set_image_create"/>
                            <field name="max_image_process"/>
                        </group>
                    </group>
                    <group name="test_connection" string="Test Process">
                        <field name="url_test"/>
                        <field name="sku_test"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--RED CONNECTOR INSTANCE TREE VIEW-->
    <record id="red_connector_instance_tree_view" model="ir.ui.view">
        <field name="name">RED CONNECTOR INSTANCE TREE VIEW</field>
        <field name="model">red.connector.instance</field>
        <field name="arch" type="xml">
            <tree string="Red Connector Instance Tree">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="ttype_connection"/>
            </tree>
        </field>
    </record>

    <!--RED CONNECTOR KANBAN VIEW-->
    <record id="red_connector_instance_kanban_view" model="ir.ui.view">
        <field name="name">RED CONNECTOR INSTANCE KANBAN VIEW</field>
        <field name="model">red.connector.instance</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-att-src="'/web/static/src/img/placeholder.png'"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_chart">
                                    <!-- Placeholder for the chart -->
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--RED CONNECTOR INSTANCE ACTION VIEW-->
    <record id="red_connector_instance_act_window" model="ir.actions.act_window">
        <field name="name">RED CONNECTOR INSTANCE ACTION VIEW</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">red.connector.instance</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Instances
            </p>
        </field>
    </record>

    <!--MENUITEM INSTANCES ROOT-->
    <menuitem id="menuroot_red_connector_instance"
              name="Red Connector"
              sequence="100"
              web_icon="red_common_connector,static/description/integration.png"
              groups="group_red_connector_user"/>

    <!--MENUITEM INSTANCES -->
    <menuitem id="menuitem_connector_instances"
              name="Connector Instances"
              parent="menuroot_red_connector_instance"
              action="red_connector_instance_act_window"
              sequence="1"/>
</odoo>