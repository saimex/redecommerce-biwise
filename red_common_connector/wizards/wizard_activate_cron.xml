<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--WIZARD CREATE CRON -->
    <record id="wizard_create_cron_form_view" model="ir.ui.view">
        <field name="name">WIZARD CREATE CRON FORM VIEW</field>
        <field name="model">wizard.activate.cron</field>
        <field name="arch" type="xml">
            <form string="Manual Queue Process" class="o_shopify_ept">
                <div class="o_horizontal_separator o_onboard_header font-weight-bold">
                    Products
                </div>
                <group>
                    <field name="instance_id" readonly="1"/>
                    <div class="o_setting_left_pane">
                        <div class="row mt16 o_settings_container o_onboard_padding">
                            <div class="col-12 o_setting_box o_onboard_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="create_cron" widget="boolean_toggle" class="o_onboard_boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span>
                                        <h6>Create Products</h6>
                                    </span>
                                    <div class="text-muted">
                                        If checked, It will create a cron job to automatically Create Products in
                                        System.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row mt16 o_settings_container o_onboard_padding">
                            <div class="col-12 o_setting_box o_onboard_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="create_cron" widget="boolean_toggle" class="o_onboard_boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span>
                                        <h6>Update Products</h6>
                                    </span>
                                    <div class="text-muted">
                                        If checked, It will create a cron job to automatically update products in
                                        system.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_left_pane">
                        <div class="row mt16 o_settings_container o_onboard_padding">
                            <div class="col-12 o_setting_box o_onboard_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="update_cron" widget="boolean_toggle" class="o_onboard_boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span>
                                        <h6>Update Products</h6>
                                    </span>
                                    <div class="text-muted">
                                        If checked, It will create a cron job to automatically Update products to export
                                        in shopify.
                                    </div>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row mt16 o_settings_container o_onboard_padding">
                            <div class="col-12 o_setting_box o_onboard_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="update_stock" widget="boolean_toggle"
                                           class="o_onboard_boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span>
                                        <h6>Update Stock</h6>
                                    </span>
                                    <div class="text-muted">
                                        If checked, It will create a cron job to automatically update stock products in
                                        system.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row mt16 o_settings_container o_onboard_padding">
                            <div class="col-12 o_setting_box o_onboard_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="update_price" widget="boolean_toggle"
                                           class="o_onboard_boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span>
                                        <h6>Update Price</h6>
                                    </span>
                                    <div class="text-muted">
                                        If checked, It will create a cron job to automatically update price products in
                                        system.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </group>
                <footer>
                    <button string="Create Cron" class="oe_highlight o_onboard_button" type="object" name="create_process_cron"/>
                    <button string="Cancel" special="cancel" class="oe_highlight o_onboard_button_white"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_create_cron_form_view" model="ir.actions.act_window">
        <field name="name">CREATE CRON ACTION VIEW</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.activate.cron</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>