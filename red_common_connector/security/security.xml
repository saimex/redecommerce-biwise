<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.module.category" id="red_connector_category">
        <field name="name">Red Connector</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_red_connector_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="red_common_connector.red_connector_category"/>
    </record>

    <record id="group_red_connector_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="red_common_connector.red_connector_category"/>
        <field name="implied_ids" eval="[(4, ref('group_red_connector_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
</odoo>