<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--RES PARTNER FORM INHERIT-->
    <record id="view_res_partner_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="cr_electronic_invoice.view_res_partner_inherit"/>
        <field name="arch" type="xml">
            <!--REPLACE FIELDS-->
            <label for="vat" position="replace"/>
            <div class="o_row" position="replace"/>
        </field>
    </record>

    <!--RES COUNTRY CODES -->
    <record id="view_res_partner_inherit_codes" model="ir.ui.view">
        <field name="name">RES PARTNER COUNTRY CODES INHERIT</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_cr_country_codes.view_res_partner_inherit"/>
        <field name="arch" type="xml">
            <field name="county_id" position="replace"/>
            <field name="district_id"  position="replace"/>
            <field name="neighborhood_id"  position="replace"/>
        </field>
    </record>

    <!--RES PARTNER FORM INHERIT -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">RES PARTNER FORM</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div class="o_address_format" position="after">
                <group>
                    <field name="identification_id"/>
                    <field name="vat"/>
                    <field name="name" position="move"/>
                    <field name="first_name" invisible="is_company != False" required="is_company = False"/>
                    <field name="last_name" invisible="is_company != False" required="is_company = False"/>
                    <field name="surname" invisible="is_company != False" required="is_company = False"/>
                    <field name="who_receive" invisible="is_company = False" required="is_company != False"/>
                    <field name="country_id" position="move" required="1"/>
                    <field name="state_id" position="move" required="1"/>
                     <field
                        name="county_id"
                        class="o_address_state"
                        placeholder="County"
                        options='{"no_open": True, "no_create": True}'
                        invisible="country_id != %(base.cr)d"
                        domain="[('state_id', '=', state_id)]"
                        context="{'country_id': country_id, 'state_id': state_id, 'zip': zip}"
                    />
                    <field
                        name="district_id"
                        class="o_address_state"
                        placeholder="District"
                        options='{"no_open": True, "no_create": True}'
                        invisible="country_id != %(base.cr)d"
                        domain="[('county_id', '=', county_id)]"
                        context="{'country_id': country_id, 'state_id': state_id, 'county_id': county_id, 'zip': zip}"
                    />
                    <field
                        name="neighborhood_id"
                        class="o_address_state"
                        placeholder="Neighborhood"
                        options='{"no_open": True, "no_create": True}'
                        invisible="country_id != %(base.cr)d"
                        domain="[('district_id', '=', district_id)]"
                        context="{'country_id': country_id, 'state_id': state_id, 'county_id': county_id, 'district_id': district_id, 'zip': zip}"
                    />
                    <field name="street" position="move" required="1"/>
                    <field name="phone" position="move" required="1"/>
                    <field name="mobile" position="move" required="1"/>
                    <field name="email" position="move" required="1"/>
                </group>
            </div>
            <!--Hide values-->
            <page name="contact_addresses" position="attributes">
                <attribute name="invisible">1</attribute>
            </page>
            <page name="sales_purchases" position="attributes">
                <attribute name="invisible">1</attribute>
            </page>
        </field>
    </record>
</odoo>