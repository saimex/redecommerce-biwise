<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- INHERIT WEBSITE FORM -->
    <record id="view_website_form" model="ir.ui.view">
        <field name="name">WEBSITE VIEW FORM</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
            <field name="domain" position="after">
                <field name="custom_domain_website"/>
                <field name="domain_website" invisible="custom_domain_website == False" required="custom_domain_website == True"/>
                <field name="categories_available_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>