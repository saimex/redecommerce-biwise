<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="address" inherit_id="website_sale.address" name="Address Management">
        <div t-attf-class="#{error.get('name') and 'o_has_error'} div_name col-lg-12 mb-2" position="before">
            <div class="col-lg-6 mb-2" id="div_type_identification">
                <label t-attf-class="col-form-label #{mode[1] == 'shipping' and 'label-optional' or ''}" for="identification_id">Type Identification</label>
                <select id="identification_id" name="identification_id" t-attf-class="form-select #{error.get('country_id') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                    <option value="">Select Identification Type...</option>
                    <t t-foreach="indentifications" t-as="ident">
                        <option t-att-value="ident.id" t-att-selected="ident.id == (identification_id and identification_id.id or -1)">
                            <t t-esc="ident.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <t t-if="website._display_partner_b2b_fields()" position="move"/>
<!--            <div t-attf-class="#{error.get('vat') and 'o_has_error'} div_vat col-lg-6 mb-2" position="move"/>-->
            <div t-attf-class="#{error.get('first_name') and 'o_has_error'} col-lg-6 mb-2" id="first_name">
                <label t-attf-class="col-form-label #{mode[1] == 'shipping' and 'label-optional' or ''}" for="first_name">First Name</label>
                <input type="text" name="first_name" t-attf-class="form-control #{error.get('first_name') and 'is-invalid' or ''}" t-att-value="'first_name' in checkout and checkout['first_name']"/>
            </div>
            <div t-attf-class="#{error.get('last_name') and 'o_has_error'} col-lg-6 mb-2" id="last_name">
                <label t-attf-class="col-form-label #{mode[1] == 'shipping' and 'label-optional' or ''}" for="last_name">Last Name</label>
                <input type="text" name="last_name" t-attf-class="form-control #{error.get('last_name') and 'is-invalid' or ''}" t-att-value="'last_name' in checkout and checkout['last_name']"/>
            </div>
            <div t-attf-class="#{error.get('surname') and 'o_has_error'} col-lg-6 mb-2" id="surname">
                <label t-attf-class="col-form-label #{mode[1] == 'shipping' and 'label-optional' or ''}" for="surname">Surname</label>
                <input type="text" name="surname" t-attf-class="form-control #{error.get('surname') and 'is-invalid' or ''}" t-att-value="'surname' in checkout and checkout['surname']"/>
            </div>
            <div t-attf-class="#{error.get('country_id') and 'o_has_error'} div_country col-lg-6 mb-2" position="move"/>
            <div t-attf-class="#{error.get('state_id') and 'o_has_error'} div_state col-lg-6 mb-2" position="move"/>
            <div t-attf-class="#{error.get('county_id') and 'o_has_error'} county_id col-lg-6 mb-2">
                <label class="col-form-label" for="county_id">County</label>
                <select id="county_id" name="county_id" t-attf-class="form-select #{error.get('county_id') and 'is-invalid' or ''}" data-init="0">
                    <option value="">County...</option>
                    <t t-foreach="state_counties" t-as="s">
                        <option t-att-value="s.id" t-att-selected="s.id == ('county_id' in checkout and state and checkout['county_id'] != '' and int(checkout['county_id']))">
                            <t t-esc="s.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <div t-attf-class="#{error.get('district_id') and 'o_has_error'} district_id col-lg-6 mb-2">
                <label class="col-form-label" for="district_id">District</label>
                <select id="district_id" name="district_id" t-attf-class="form-select #{error.get('district_id') and 'is-invalid' or ''}" data-init="0">
                    <option value="">District...</option>
                    <t t-foreach="county_districts" t-as="s">
                        <option t-att-value="s.id" t-att-selected="s.id == ('district_id' in checkout and county and checkout['district_id'] != '' and int(checkout['district_id']))">
                            <t t-esc="s.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <div t-attf-class="#{error.get('street') and 'o_has_error'} div_street col-lg-12 mb-2" position="move"/>
            <div t-attf-class="#{error.get('email') and 'o_has_error'} col-lg-6 mb-2" position="move"/>
            <div t-attf-class="#{error.get('phone') and 'o_has_error'} col-lg-6 mb-2" position="move"/>
            <div t-attf-class="#{error.get('mobile') and 'o_has_error'} col-lg-6 mb-2" id="mobile">
                <label class="col-form-label" for="phone">Mobile</label>
                <input type="tel" name="mobile"
                       t-attf-class="form-control #{error.get('mobile') and 'is-invalid' or ''}"
                       t-att-value="'mobile' in checkout and checkout['mobile']"/>
            </div>
        </div>
        <div t-attf-class="#{error.get('state_id') and 'o_has_error'} div_state col-lg-6 mb-2" position="attributes">
            <attribute name="t-att-style"></attribute>
        </div>
        <select name="state_id" position="attributes">
            <attribute name="id">state_id</attribute>
        </select>
        <div t-attf-class="#{error.get('company_name') and 'o_has_error'} col-lg-6 mb-2" position="attributes">
            <attribute name="style">display:none !important;</attribute>
        </div>
        <div t-attf-class="#{error.get('name') and 'o_has_error'} div_name col-lg-12 mb-2" position="attributes">
            <attribute name="style">display:none !important;</attribute>
        </div>
        <div t-attf-class="mb-2 #{error.get('street2') and 'o_has_error' or ''} col-lg-12 div_street2" position="attributes">
            <attribute name="style">display:none !important;</attribute>
        </div>
        <div t-attf-class="#{error.get('city') and 'o_has_error' or ''} div_city col-md-8 mb-2" position="attributes">
            <attribute name="style">display:none !important;</attribute>
        </div>
        <t t-set='zip_city' position="replace"/>
        <div t-attf-class="#{error.get('zip') and 'o_has_error'} div_zip col-md-4 mb-2" position="replace"/>
        <t t-if="'zip' in zip_city and zip_city.index('zip') &gt; zip_city.index('city')" position="replace"/>
        <t t-if="'zip' in zip_city and zip_city.index('zip') &lt; zip_city.index('city')" position="replace"/>
        <xpath expr="//t[@t-if='website._display_partner_b2b_fields()']/div[hasclass('w-100')]" position="attributes">
            <attribute name="style">display:none !important;</attribute>
        </xpath>
        <input name="name" position="replace">
            <input type="text" name="name" t-attf-class="form-control #{error.get('name') and 'is-invalid' or ''}" value="*" />
        </input>
    </template>
</odoo>